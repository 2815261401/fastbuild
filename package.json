{
  "publisher": "lichenghao",
  "name": "fast-build",
  "displayName": "快速构建工具",
  "type": "module",
  "version": "0.1.8",
  "packageManager": "pnpm@10.13.0",
  "description": "快速构建的工具",
  "preview": false,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/2815261401/fastbuild.git"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "engines": {
    "node": "22.x",
    "pnpm": "10.x",
    "vscode": "^1.102.0"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "fast-build.commit",
        "title": "约定式提交",
        "category": "Commitizen",
        "icon": {
          "light": "public/menu-icon-light.svg",
          "dark": "public/menu-icon-dark.svg"
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "fast-build.commit",
          "when": "false"
        }
      ],
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "fast-build.commit",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "快速构建工具",
      "properties": {
        "fast-build.commitStep": {
          "type": "object",
          "default": {
            "default": [
              "type",
              "scope",
              "gitmoji",
              "subject"
            ],
            "Angluar": [
              "type",
              "scope",
              "gitmoji",
              "subject",
              "body",
              "footer"
            ],
            "all": [
              "type",
              "scope",
              "gitmoji",
              "subject",
              "body",
              "breaking",
              "issues"
            ]
          },
          "markdownDescription": "提交消息的步骤，`header`会覆盖`type`,`scope`,`gitmoji`,`subject`,`footer`会覆盖`breaking`,`issues`。",
          "patternProperties": {
            ".*": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "header",
                  "type",
                  "scope",
                  "gitmoji",
                  "subject",
                  "body",
                  "footer",
                  "breaking",
                  "issues"
                ]
              }
            }
          },
          "additionalProperties": false
        },
        "fast-build.commitRememberStep": {
          "type": "string",
          "default": "",
          "markdownDescription": "记住的步骤。"
        },
        "fast-build.commitNeedRemember": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "是否需要记住步骤。"
        },
        "fast-build.commitScopes": {
          "type": "array",
          "default": [],
          "markdownDescription": "指定 `scope` 中的可选项。"
        },
        "fast-build.commitAppendBranchName": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "是否在提交信息中追加当前分支名称。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "vite build",
    "watch": "vite build --watch",
    "package": "vite build --mode production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "test": "vscode-test",
    "build": "vsce package",
    "pre-release": "vsce package --pre-release",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "release": "custom-release"
  },
  "dependencies": {
    "conventional-changelog-conventionalcommits": "^9.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/rules": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@custom/conventional-changelog": "workspace:*",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.16.3",
    "@types/vscode": "^1.102.0",
    "@vscode-use/utils": "^0.1.59",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "cosmiconfig": "^9.0.0",
    "dayjs": "^1.11.13",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "jsonc-parser": "^3.3.1",
    "lilconfig": "^3.1.3",
    "lint-staged": "^16.1.2",
    "radashi": "^12.6.0",
    "release-it": "^19.0.3",
    "tinyglobby": "^0.2.14",
    "typescript": "^5.8.3",
    "vite": "npm:rolldown-vite@7.0.8"
  }
}
