{
  "name": "fast-build",
  "displayName": "fast-build",
  "description": "快速构建的工具",
  "publisher": "lichenghao",
  "version": "0.1.2",
  "preview": false,
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/2815261401/fastbuild.git"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fast-build.createTemplate",
        "title": "保存为模板"
      },
      {
        "command": "fast-build.createFile",
        "when": "explorerResourceIsFolder",
        "title": "导入模板"
      },
      {
        "command": "fast-build.commit",
        "title": "约定式提交",
        "category": "Commitizen",
        "icon": {
          "light": "public/menu-icon-light.svg",
          "dark": "public/menu-icon-dark.svg"
        }
      },
      {
        "command": "fast-build.quickCommand",
        "title": "快速执行命令"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "fast-build.createTemplate",
          "when": "false"
        },
        {
          "command": "fast-build.createFile",
          "when": "false"
        },
        {
          "command": "fast-build.quickCommand",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "fast-build.quickCommand",
          "group": "1_modification"
        },
        {
          "command": "fast-build.createTemplate",
          "group": "1_modification"
        },
        {
          "command": "fast-build.createFile",
          "when": "explorerResourceIsFolder",
          "group": "1_modification"
        }
      ],
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "fast-build.commit",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "快速构建工具",
      "properties": {
        "fast-build.templateWorkspaceFolder": {
          "type": "number",
          "default": null,
          "description": "模板配置所在工作区(多个工作区时需要设置)"
        },
        "fast-build.templateConfigPath": {
          "type": "string",
          "default": ".vscode/template.config.json",
          "description": "模板配置保存位置"
        },
        "fast-build.showOutputChannel": {
          "type": "string",
          "enum": [
            "off",
            "always",
            "onError"
          ],
          "default": "onError",
          "description": "什么时候打开输出面板。"
        },
        "fast-build.gitAutoPush": {
          "type": "boolean",
          "default": true,
          "description": "设置为true将自动提交。"
        },
        "fast-build.gitStep": {
          "type": "object",
          "default": {
            "default": [
              "type",
              "scope",
              "gitmoji",
              "subject"
            ],
            "Angluar": [
              "type",
              "scope",
              "gitmoji",
              "subject",
              "body",
              "footer"
            ],
            "all": [
              "type",
              "scope",
              "gitmoji",
              "subject",
              "body",
              "breaking",
              "issues"
            ]
          },
          "markdownDescription": "提交消息的步骤，`header`会覆盖`type`,`scope`,`gitmoji`,`subject`,`footer`会覆盖`breaking`,`issues`。",
          "patternProperties": {
            ".*": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "header",
                  "type",
                  "scope",
                  "gitmoji",
                  "subject",
                  "body",
                  "footer",
                  "breaking",
                  "issues"
                ]
              }
            }
          },
          "additionalProperties": false
        },
        "fast-build.gitRememberStep": {
          "type": "string",
          "default": "",
          "markdownDeprecationMessage": "上次使用步骤"
        },
        "fast-build.gitScopes": {
          "type": "array",
          "default": [],
          "markdownDescription": "指定 `scope` 中的可选项。"
        },
        "fast-build.gitBreakingPrefix": {
          "type": "string",
          "default": "BREAKING CHANGE:",
          "markdownDescription": "`BREAKING CHANGE`的前缀"
        },
        "fast-build.gitAppendBranchName": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "是否添加分支名称"
        },
        "fast-build.commandConfiguration": {
          "type": "object",
          "additionalProperties": "string",
          "default": {
            "强制删除": "Remove-Item -Force -Recurse $path",
            "强制删除(git bash)": "(bash)rm -rf $path"
          },
          "markdownDescription": "右击快速执行命令，`$path`会替换为右击的文件(夹)路径,`$file`只对文件生效,`$dir`只对文件夹生效,`$custom`用于自定义参数,`(bash)`将使用git bash执行命令。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint",
    "test": "node ./out/test/runTest.js",
    "build": "vsce package",
    "pre-release": "vsce package --pre-release",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -n ./changelog-option.mjs && git add CHANGELOG.md",
    "prepare": "husky"
  },
  "dependencies": {
    "dayjs": "^1.11.12",
    "execa": "^9.3.0",
    "node-fetch": "^3.3.2",
    "xe-utils": "^3.5.30"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/rules": "^19.0.3",
    "@commitlint/types": "^19.0.3",
    "@types/conventional-commits-parser": "^5.0.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "22.1.0",
    "@types/vscode": "^1.92.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^2.31.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "conventional-commits-parser": "^6.0.0",
    "cz-customizable": "^7.2.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "generator-code": "^1.11.1",
    "glob": "^11.0.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "mocha": "^10.7.0",
    "prettier": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "config": {
    "cz-customizable": {
      "config": "./public/.cz-config.cjs"
    }
  }
}
