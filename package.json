{
  "name": "fast-build",
  "displayName": "fast-build",
  "description": "快速构建的工具",
  "publisher": "lichenghao",
  "version": "0.0.11",
  "preview": false,
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/2815261401/fastbuild.git"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fast-build.create",
        "when": "explorerResourceIsFolder",
        "title": "(通过模板) 新建文件"
      },
      {
        "command": "fast-build.createConfigFile",
        "title": "快速构建:模板配置文件"
      },
      {
        "command": "fast-build.commit",
        "title": "约定式提交",
        "category": "Commitizen",
        "icon": {
          "light": "public/menu-icon-light.svg",
          "dark": "public/menu-icon-dark.svg"
        }
      },
      {
        "command": "fast-build.createCommitConfigFile",
        "title": "快速构建:git配置文件"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "fast-build.create",
          "when": "false"
        },
        {
          "command": "fast-build.create",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "fast-build.create",
          "when": "explorerResourceIsFolder",
          "group": "1_modification"
        }
      ],
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "fast-build.commit",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "快速构建工具",
      "properties": {
        "fast-build.templateConfigPath": {
          "type": "string",
          "default": "template.config.js",
          "markdownDescription": "配置文件的路径"
        },
        "fast-build.templateShowPath": {
          "default": false,
          "type": "boolean",
          "markdownDescription": "勾选后,模板选择会显示路径。"
        },
        "fast-build.templateDelimiter": {
          "type": "string",
          "default": " > ",
          "markdownDescription": "需要勾选```Template Show Path```文件路径的分割符,默认是```' > '```"
        },
        "fast-build.templateESCBack": {
          "default": false,
          "type": "boolean",
          "markdownDescription": "勾选后,按键```esc```将返回上级目录,而不是取消选择。"
        },
        "fast-build.showOutputChannel": {
          "type": "string",
          "enum": [
            "off",
            "always",
            "onError"
          ],
          "default": "onError",
          "description": "什么时候打开输出面板。"
        },
        "fast-build.gitAutoPush": {
          "type": "boolean",
          "default": true,
          "description": "设置为true将自动提交。"
        },
        "fast-build.gitStep": {
          "type": "object",
          "default": {
            "default": [
              "type",
              "scope",
              "gitmoji",
              "subject"
            ],
            "Angluar": [
              "type",
              "scope",
              "gitmoji",
              "subject",
              "body",
              "footer"
            ],
            "all": [
              "type",
              "scope",
              "gitmoji",
              "subject",
              "body",
              "breaking",
              "issues"
            ]
          },
          "markdownDescription": "提交消息的步骤，`header`会覆盖`type`,`scope`,`gitmoji`,`subject`,`footer`会覆盖`breaking`,`issues`。",
          "patternProperties": {
            ".*": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "header",
                  "type",
                  "scope",
                  "gitmoji",
                  "subject",
                  "body",
                  "footer",
                  "breaking",
                  "issues"
                ]
              }
            }
          },
          "additionalProperties": false
        },
        "fast-build.gitRememberStep": {
          "type": "string",
          "default": "",
          "markdownDeprecationMessage": "上次使用步骤"
        },
        "fast-build.gitScopes": {
          "type": "array",
          "default": [],
          "markdownDescription": "指定 `scope` 中的可选项。"
        },
        "fast-build.gitBreakingPrefix": {
          "type": "string",
          "default": "BREAKING CHANGE:",
          "markdownDescription": "`BREAKING CHANGE`的前缀"
        },
        "fast-build.gitAppendBranchName": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "添加分支名称到提交信息"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "vsce package",
    "pre-release": "vsce package --pre-release",
    "prepare": "husky install"
  },
  "dependencies": {
    "dayjs": "^1.11.10",
    "execa": "^8.0.1",
    "node-fetch": "^3.3.2",
    "xe-utils": "^3.5.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/rules": "^19.0.3",
    "@commitlint/types": "^19.0.3",
    "@types/conventional-commits-parser": "^5.0.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "16.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vscode/test-electron": "^2.3.5",
    "@vscode/vsce": "^2.21.1",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "conventional-commits-parser": "^5.0.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "generator-code": "^1.7.9",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "config": {
    "cz-customizable": {
      "config": "./public/.cz-config.cjs"
    }
  }
}
