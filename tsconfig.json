{
  "compilerOptions": {
    /** 使用增量编译，提高后续编译速度 */
    "incremental": true,
    /** 输出目标版本 */
    "target": "ESNext",
    /** 需要引用的库 */
    "lib": ["ESNext"],
    /** 模块导入的基准路径 */
    "baseUrl": "./",
    /** 模块类型 */
    "module": "ESNext",

    /** 以node的形式解析模块 */
    "moduleResolution": "Node",
    /** 允许直接导入 .json 文件 */
    "resolveJsonModule": true,
    /** 禁止导入 TypeScript 扩展名的文件 */
    "allowImportingTsExtensions": false,
    /** 允许编译javascript文件 */
    "allowJs": false,
    /** 严格模式 */
    "strict": true,
    /** 允许隐式的 any 类型 */
    "noImplicitAny": false,
    /** 生成 sourcemap */
    "sourceMap": true,
    /** 允许从没有设置默认导出的模块中默认导入 */
    "allowSyntheticDefaultImports": true,
    /** 使 CommonJS 和 ES 模块能够更无缝地一起工作 */
    "esModuleInterop": true
  }
}
